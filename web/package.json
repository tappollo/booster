    "react-app-rewired": "^2.1.6",
    "tailwindcss": "^1.4.2",
    "webpack-bundle-analyzer": "^3.7.0"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
